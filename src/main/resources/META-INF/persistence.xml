<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="3.0"
	xsi:schemalocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

	<persistence-unit name="PersistenceUnit"
		transaction-type="JTA">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<jta-data-source>java:/comp/env/jdbc/localPostgreSQL</jta-data-source>

		<class>com.ivanart555.university.entities.Classroom</class>
		<class>com.ivanart555.university.entities.Course</class>
		<class>com.ivanart555.university.entities.Group</class>
		<class>com.ivanart555.university.entities.Lecturer</class>
		<class>com.ivanart555.university.entities.Lesson</class>
		<class>com.ivanart555.university.entities.Student</class>

		<properties>
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>

</persistence>